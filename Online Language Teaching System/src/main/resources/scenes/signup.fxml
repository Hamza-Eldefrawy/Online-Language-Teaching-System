<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="SignupController"
            stylesheets="styles.css"
            prefWidth="800" prefHeight="600">
    
    <!-- Left Side Menu -->
    <left>
        <VBox styleClass="side-menu" prefWidth="200">
            <!-- App Logo and Name -->
            <VBox alignment="CENTER" spacing="5">
                <ImageView fitWidth="80" fitHeight="80" preserveRatio="true">
                    <Image url="@logo.png"/>
                </ImageView>
                <Label styleClass="app-name" text="LinguaLearn" />
                <Separator />
            </VBox>
            
            <Padding>
                <Insets top="20" />
            </Padding>
            
            <!-- Menu Items -->
            <Button styleClass="menu-item" text="Home" onAction="#navigateToHome" />
            <Button styleClass="menu-item" text="Login" onAction="#navigateToLogin" />
            <Button styleClass="menu-item, menu-item-selected" text="Signup" onAction="#navigateToSignup" />
            <Button styleClass="menu-item" text="About" onAction="#navigateToAbout" />
            
            <VBox.vgrow>
                <Priority fx:constant="ALWAYS" />
            </VBox.vgrow>
        </VBox>
    </left>
    
    <!-- Main Content Area -->
    <center>
        <StackPane>
            <VBox styleClass="content-area" spacing="20" alignment="CENTER">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40" />
                </padding>
                
                <Label styleClass="page-title" text="Create an Account" />
                
                <GridPane styleClass="form-container" hgap="15" vgap="15" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="150" halignment="RIGHT" />
                        <ColumnConstraints prefWidth="250" />
                    </columnConstraints>
                    
                    <!-- Username Field -->
                    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="usernameField" promptText="Enter username" 
                              GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    
                    <!-- Email Field -->
                    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="emailField" promptText="Enter email" 
                              GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    
                    <!-- Password Field -->
                    <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <PasswordField fx:id="passwordField" promptText="Enter password" 
                                 GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    
                    <!-- User Type Selection -->
                    <Label text="User Type:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <HBox spacing="20" GridPane.rowIndex="3" GridPane.columnIndex="1">
                        <RadioButton fx:id="studentRadio" text="Student" selected="true">
                            <toggleGroup>
                                <ToggleGroup fx:id="userTypeGroup" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="teacherRadio" text="Teacher" toggleGroup="$userTypeGroup" />
                    </HBox>
                    
                    <!-- Language Selection -->
                    <Label text="Language:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <ComboBox fx:id="languageComboBox" promptText="Select language" 
                             GridPane.rowIndex="4" GridPane.columnIndex="1">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="English" />
                                <String fx:value="German" />
                                <String fx:value="French" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </GridPane>
                
                <Button text="Sign Up" onAction="#signUp" />
                
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" />
                    <Hyperlink text="Login" onAction="#navigateToLogin" />
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>