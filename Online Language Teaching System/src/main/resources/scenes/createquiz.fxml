                <!-- Action Buttons -->
                <HBox alignment="CENTER_RIGHT" spacing="20">
                    <Button onAction="#cancel" styleClass="button-secondary" text="Cancel" />
                    <Button onAction="#saveQuiz" text="Save Quiz" />
