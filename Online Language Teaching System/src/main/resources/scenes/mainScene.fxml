<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.MainSceneController"
            stylesheets="@styles.css"
            prefWidth="800" prefHeight="600">
    
    <!-- Left Side Menu -->
    <left>
        <VBox styleClass="side-menu" prefWidth="200">
            <!-- App Logo and Name -->
            <VBox alignment="CENTER" spacing="5">
                <ImageView fitWidth="80" fitHeight="80" preserveRatio="true">
                    <Image url="@logo.png"/> <!-- Placeholder for actual logo -->
                </ImageView>
                <Label styleClass="app-name" text="LinguaLearn" />
                <Separator />
            </VBox>
            
<!--            <Padding>
                <Insets top="20" />
            </Padding>-->
            
            <!-- Menu Items -->
            <Button styleClass="menu-item, menu-item-selected" text="Home" onAction="#navigateToHome" />
            <Button styleClass="menu-item" text="Login" onAction="#navigateToLogin" />
            <Button styleClass="menu-item" text="Signup" onAction="#navigateToSignup" />
            <Button styleClass="menu-item" text="About" onAction="#navigateToAbout" />
            
            <VBox.vgrow>
                <Priority fx:constant="ALWAYS" />
            </VBox.vgrow>
        </VBox>
    </left>
    
    <!-- Main Content Area -->
    <center>
        <StackPane>
            <VBox alignment="CENTER" spacing="20" styleClass="content-area">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40" />
                </padding>
                
                <Label styleClass="page-title" text="Welcome to LinguaLearn!" />
                
                <ImageView fitWidth="200" fitHeight="200" preserveRatio="true">
                    <Image url="@welcome.png"/> <!-- Placeholder for welcome image -->
                </ImageView>
                
                <Label wrapText="true" textAlignment="CENTER" 
                       text="Start your language learning journey today! Learn languages in a fun and interactive way with our comprehensive lessons and quizzes." />
                
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Get Started" onAction="#navigateToSignup" />
                    <Button text="Learn More" styleClass="button-secondary" onAction="#navigateToAbout" />
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>