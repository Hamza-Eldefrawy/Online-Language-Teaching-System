<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="LoginController"
            stylesheets="styles.css"
            prefWidth="800" prefHeight="600">
    
    <!-- Left Side Menu -->
    <left>
        <VBox styleClass="side-menu" prefWidth="200">
            <!-- App Logo and Name -->
            <VBox alignment="CENTER" spacing="5">
                <ImageView fitWidth="80" fitHeight="80" preserveRatio="true">
                    <Image url="@logo.png"/>
                </ImageView>
                <Label styleClass="app-name" text="LinguaLearn" />
                <Separator />
            </VBox>
            
            <Padding>
                <Insets top="20" />
            </Padding>
            
            <!-- Menu Items -->
            <Button styleClass="menu-item" text="Home" onAction="#navigateToHome" />
            <Button styleClass="menu-item, menu-item-selected" text="Login" onAction="#navigateToLogin" />
            <Button styleClass="menu-item" text="Signup" onAction="#navigateToSignup" />
            <Button styleClass="menu-item" text="About" onAction="#navigateToAbout" />
            
            <VBox.vgrow>
                <Priority fx:constant="ALWAYS" />
            </VBox.vgrow>
        </VBox>
    </left>
    
    <!-- Main Content Area -->
    <center>
        <StackPane>
            <VBox styleClass="content-area" spacing="20" alignment="CENTER">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40" />
                </padding>
                
                <Label styleClass="page-title" text="Login to Your Account" />
                
                <GridPane styleClass="form-container" hgap="15" vgap="15" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="150" halignment="RIGHT" />
                        <ColumnConstraints prefWidth="250" />
                    </columnConstraints>
                    
                    <!-- Username Field -->
                    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="usernameField" promptText="Enter username" 
                              GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    
                    <!-- Password Field -->
                    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <PasswordField fx:id="passwordField" promptText="Enter password" 
                                 GridPane.rowIndex="1" GridPane.columnIndex="1" />
                </GridPane>
                
                <Button text="Login" onAction="#login" />
                
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" />
                    <Hyperlink text="Sign Up" onAction="#navigateToSignup" />
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>